<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsAppJetpack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/nba_blue</item>
        <item name="colorPrimaryVariant">@color/nba_blue_dark</item>
        <item name="colorOnPrimary">@color/nba_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="preferenceTheme">@style/preference</item>-->
    </style>

    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/nba_blue</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="widgetTextView">
        <item name="android:padding">8dp</item>
        <item name="elevation">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

<!--    <style name="preference" parent="Theme.AppCompat">-->
<!--        <item name="android:background">@color/white</item>-->
<!--    </style>-->
</resources>